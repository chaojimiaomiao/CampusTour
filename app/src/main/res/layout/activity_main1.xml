<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.zhaibingjie.myapplication.MainActivity">

    <Button
        android:id="@+id/show_area"
        android:text="显示区域划分"
        android:padding="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/show_center"
        android:text="还原校区"
        android:padding="10dp"
        android:layout_toRightOf="@id/show_area"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/txtShow"
        android:text="shishihish"
        android:layout_marginRight="80dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <com.baidu.mapapi.map.MapView
        android:id="@+id/bmapView1"
        android:layout_marginTop="50dp"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:clickable="true" />

    <Button
        android:id="@+id/control_north_jia"
        android:layout_alignParentRight="true"
        android:text="n+"
        android:layout_width="50dp"
        android:layout_height="40dp" />
    <Button
        android:id="@+id/control_north_jian"
        android:layout_below="@id/control_north_jia"
        android:layout_alignParentRight="true"
        android:text="n-"
        android:layout_width="50dp"
        android:layout_height="40dp" />

    <Button
        android:id="@+id/control_east_jia"
        android:layout_toLeftOf="@id/control_north_jia"
        android:text="e+"
        android:layout_width="50dp"
        android:layout_height="40dp" />
    <Button
        android:id="@+id/control_east_jian"
        android:layout_toLeftOf="@id/control_north_jian"
        android:layout_below="@id/control_east_jia"
        android:text="e-"
        android:layout_width="50dp"
        android:layout_height="40dp" />

    <Button
        android:id="@+id/control_south_jia"
        android:layout_alignParentBottom="true"
        android:text="s+"
        android:layout_width="50dp"
        android:layout_height="40dp" />
    <Button
        android:id="@+id/control_south_jian"
        android:layout_above="@id/control_south_jia"
        android:text="s-"
        android:layout_width="50dp"
        android:layout_height="40dp" />
    <Button
        android:id="@+id/control_west_jia"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@id/control_south_jia"
        android:text="w+"
        android:layout_width="50dp"
        android:layout_height="40dp" />
    <Button
        android:id="@+id/control_west_jian"
        android:layout_above="@id/control_west_jia"
        android:layout_toRightOf="@id/control_south_jian"
        android:text="w-"
        android:layout_width="50dp"
        android:layout_height="40dp" />
</RelativeLayout>
